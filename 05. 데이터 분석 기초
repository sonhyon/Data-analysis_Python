import seaborn as sns
mpg = sns.load_dataset('mpg')  # mpg 데이터 불러오기
mpg.head()
mpg['total'] = (mpg['horsepower'] + mpg['weight']) / 2
mpg.head()

#기준값 정하기
mpg['total'].describe()
mpg['total'].plot.hist()

