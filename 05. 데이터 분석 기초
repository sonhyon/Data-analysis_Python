import pandas as pd
df_raw = pd.DataFrame({'var1' : [1,2,1], #데이터 프레임 만들기
                       'var2' : [2,3,2]})
df_raw
df_new = df_raw.copy() #복사본 만들기
df_new
df_new = df_new.rename(columns = {'var2' : 'v2'}) #변수명 바꾸기
df_new

df_raw['var_sum'] = df_raw['var1'] + df_raw['var2'] #파생 변수 만들기
df_raw
